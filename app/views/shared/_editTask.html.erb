<div id="editTask" class="invisible">
  <h2> Edit the task </h2>
  <%= form_tag("/tasks/0", method: "patch", id: "editTaskForm") do %>
    <div class="field">
      <%= label_tag(:title, "Title:") %>
      <%= text_field_tag :title, nil, id: 'editTitleFieldTask'  %>
    </div>
    <div class="field">
      <%= label_tag(:project, "Project:") %>
      <%= select_tag(:project, options_for_select(@project_options, params[:projects]), id: 'editProjectField') %>
    </div>
    <div class="field">
      <%= label_tag(:duedate, "Due date:") %>
      <%= date_field_tag "duedate", nil, id: 'editDuedateField' %>
    </div>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <%= submit_tag("Update")%>
    <div id="abortEditTask" class="fakeLink">Abort</div>
  <% end %>
</div>
